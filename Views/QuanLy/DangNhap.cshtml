@model HShop2024.ViewModels.LoginNV_VM

@{
    ViewData["Title"] = "Đăng nhập nhân viên";
}

<div class="container py-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
    @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
    {
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p class="text-danger">@error.ErrorMessage</p>
        }
    }
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 border rounded shadow-sm bg-light">
                <form asp-action="DangNhap" method="post">
                    <!-- Mã nhân viên -->
                    <div class="mb-3">
                        <label asp-for="MaNv" class="form-label"></label>
                        <input asp-for="MaNv" class="form-control" placeholder="Hint account:hstn" />
                        <span asp-validation-for="MaNv" class="text-danger"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label"></label>
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Password:5" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                </form>

                <div class="mt-4 text-center">
                    <a asp-action="DangNhap" asp-controller="KhachHang" class="btn btn-secondary">Chuyển sang đăng nhập khách hàng</a>
                </div>
            </div>
        </div>
    </div>
</div>
