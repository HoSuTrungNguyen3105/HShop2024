@model HShop2024.Data.KhachHang

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    var errorMessage = TempData["ErrorMessage"] as string;
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger d-flex align-items-center shadow-sm rounded p-3" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i> <!-- Icon được thay đổi -->
        <span class="fs-5 fw-semibold">@errorMessage</span>
    </div>
}+
<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
    <form asp-controller="KhachHang" asp-action="DangKy" method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="MaKh" class="form-label">Mã khách hàng</label>
                    <input asp-for="MaKh" class="form-control" />
                    <span asp-validation-for="MaKh" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PasswordHash" class="form-label">Mật khẩu</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

               @*  <div class="form-group mb-3">
                    <label asp-for="Pa" class="form-label">Nhập lại mật khẩu</label>
                    <input asp-for="XacNhanMatKhau" type="password" class="form-control" />
                    <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                </div> *@

                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label">Họ tên</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-check my-3">
                    <input asp-for="GioiTinh" type="checkbox" class="form-check-input" id="GioiTinh" />
                    <label class="form-check-label" for="GioiTinh">Nam?</label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NgaySinh" class="form-label">Ngày sinh (dd/MM/yyyy)</label>
                    <input asp-for="NgaySinh" class="form-control" placeholder="dd/MM/yyyy" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Hinh" class="form-label">Ảnh đại diện</label>
                    <input asp-for="Hinh" type="file" class="form-control" />
                    <span asp-validation-for="Hinh" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Nút Đăng ký -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary py-2 px-4">Đăng ký</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}