@model IEnumerable<HShop2024.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục</h4>
        <ul class="list-unstyled fruite">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.MaLoai">
                            <i class="fa fa-toggle-off m-2 toggle-icon" data-ma-loai="@item.MaLoai" onclick="toggleIcon(this)"></i>
                            @item.TenLoai
                        </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
